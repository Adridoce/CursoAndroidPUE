<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@color/activity_main_background"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/main_activity_et_text"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Introduce un texto"
        app:layout_constraintBottom_toTopOf="@id/main_activity_tv_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_activity_tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@id/main_activity_btn_send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_activity_et_text" />

    <Button
        android:id="@+id/main_activity_btn_send"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/activity_main_btn_send"
        android:text="@string/main_activity_btn_send"
        android:textColor="@color/activity_main_background"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_tv_text" />

</androidx.constraintlayout.widget.ConstraintLayout>